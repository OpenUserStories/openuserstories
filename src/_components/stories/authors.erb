<div class='flex flex-col gap-y-2'>
  <% if @show_title %>
    <div class='text-gray-500 text-xs'>
      <% if @authors.count > 1 %>
        Authors
      <% else %>
        Author
      <% end %>
    </div>
  <% end %>

  <div class="relative flex items-center gap-x-4">
    <% @authors.each do |a| %>
      <%= render Shared::Author.new(a) %>
    <% end %>
  </div>
</div>