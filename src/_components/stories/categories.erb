<div class='flex flex-col gap-y-2'>
  <% if @show_title %>
    <div class='text-gray-500 text-xs'>Categories</div>
  <% end %>
  
  <div class='flex gap-x-2'>
    <% @categories.each do |c| %>
      <div class='inline-block bg-gray-100 bg-gradient-to-b from-gray-50 to-gray-100 text-slate-900 border border-slate-100 text-xs font-semibold py-1 px-3 rounded-xl'><%= c %></div>
    <% end %>
  </div>
</div>