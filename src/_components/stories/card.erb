<article class="relative isolate flex flex-col gap-8 lg:flex-row">
  <div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
    <%= link_to @story do %>
      <img src="<%= image_url %>" alt="" class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover">
      <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
    <% end %>
  </div>
  <div>
    <div class="flex items-center gap-x-4 text-xs">
      <%= render Shared::Datetime.new(@story.data.date) %>
      <% if @story.data.updated && @story.data.updated != @story.data.date %>
        <div class='text-gray-500'>
          (Updated: <%= render Shared::Datetime.new(@story.data.updated) %>)
        </div>
      <% end %>

      <% @story.data.categories.each do |c| %>
        <div class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"><%= c %></div>
      <% end %>
    </div>
    <div class="group relative max-w-xl">
      <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
        <%= link_to @story do %>
          <span class="absolute inset-0"></span>
          <%= @story.data.title %>
        <% end %>
      </h3>
      <p class="mt-5 text-sm leading-6 text-gray-600"><%= @story.data.summary %></p>
      <p class="mt-1 text-sm leading-6">
        <%= link_to "Read More...", @story, class: 'link' %>
      </p>
    </div>
    <div class="mt-6 border-t border-gray-900/5 pt-6">
      <%= render Stories::Authors.new(@story.data.authors) %>
    </div>
  </div>
</article>
