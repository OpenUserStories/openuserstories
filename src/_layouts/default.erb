<% page_width = data.layout == 'story' ? 'max-w-prose' : 'max-w-5xl' %>
<!doctype html>
<html lang="<%= site.locale %>" class='min-h-full'>
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="min-h-full bg-gradient-to-b from-red-50/20 to-indigo-50/10">
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource, tab: data.tab) %>

    <% if data.layout == 'story' %>
      <div style='background-image: url(https://images.unsplash.com/photo-<%= data.unsplash_id -%>?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&h=768)' class='hidden md:block md:bg-cover bg-center h-32 md:h-96'>
      </div>
      <div class="mx-auto prose hidden md:block">
        <span class='prose-sm prose-a:text-gray-500 text-gray-500'>
          <%== data.unsplash_credit %>
        </span>
      </div>
    <% end %>

    <main class="mx-auto <%= page_width %> pt-4 pb-8 px-4 md:px-0">
      <%= yield %>

      <div class='mt-8'>
        <%= render "footer", metadata: site.metadata %>
      </div>
    </main>

  </body>
</html>
