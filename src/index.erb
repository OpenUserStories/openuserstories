---
layout: default
tab: stories
---

<div class="px-6 pt-4 md:pt-14 lg:px-8">
  <div>
    <div class="md:flex gap-x-16 items-stretch">
      <div class='flex-none'>
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Open User Stories</h1>
      </div>
      <div class='flex-1'>
        <p class="text-lg text-gray-600"><%= site.metadata.description %></p>
      </div>
    </div>
  </div>
  <div class='mt-8'>
    <% collections.stories.resources.each do |r| %>
      <%= render Stories::Card.new(r) %>
    <% end %>
  </div>
</div>
